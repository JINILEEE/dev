package member;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;

public class MemberDao {

	//필드 == 멤버변수
	private File file;
	
	//회원가입 //파라미터로 전달받은 데이터 저장공간에 넣기
	public boolean join(MemberData memberData) throws Exception {
		//할일
		FileWriter fw = new FileWriter(file);
		
		String str = memberData.getId() + "#" + memberData.getPwd() + "#" + memberData.getNick();
		fw.write(str);
		
		fw.close();
		
		//결과 리턴
		return true;
		
	}//join end
	
	//로그인  //파라미터로 전달받은 데이터랑 저장공간의 데이터랑 비교
	public void login(MemberData memberData) {
		//할일
		new FileReader(file);
		new BufferedReader();
		
		
		//결과 리턴
		
		
	}//login end
	
	
}//class
